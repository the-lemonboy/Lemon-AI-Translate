{
  "name": "ai-translate-wiki",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "1.0.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "translate",
    "ai",
    "markdown",
    "wiki",
    "chinese",
    "multilingual"
  ],
  "activationEvents": [
    "onCommand:ai-translate-wiki.translateFile",
    "onCommand:ai-translate-wiki.translateSelection",
    "onCommand:ai-translate-wiki.openSettings",
    "onView:ai-translate-wiki.translateView",
    "onViewContainer:ai-translate-wiki"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-translate-wiki.translateFile",
        "title": "%command.translateFile.title%",
        "category": "AI Translate"
      },
      {
        "command": "ai-translate-wiki.translateSelection",
        "title": "%command.translateSelection.title%",
        "category": "AI Translate"
      },
      {
        "command": "ai-translate-wiki.openSettings",
        "title": "%command.openSettings.title%",
        "category": "AI Translate"
      },
      {
        "command": "ai-translate-wiki.translateDirectory",
        "title": "%command.translateDirectory.title%",
        "category": "AI Translate"
      },
      {
        "command": "ai-translate-wiki.testTranslation",
        "title": "%command.testTranslation.title%",
        "category": "AI Translate"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-translate-wiki",
          "title": "%viewContainer.title%",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "ai-translate-wiki": [
        {
          "id": "ai-translate-wiki.translateView",
          "name": "%view.translateView.name%",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "ai-translate-wiki.translateSelection",
          "group": "ai-translate"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == '.md'",
          "command": "ai-translate-wiki.translateFile",
          "group": "ai-translate"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-translate-wiki.translateFile"
        },
        {
          "command": "ai-translate-wiki.translateSelection"
        },
        {
          "command": "ai-translate-wiki.openSettings"
        },
        {
          "command": "ai-translate-wiki.translateDirectory"
        },
        {
          "command": "ai-translate-wiki.testTranslation"
        },
        {
          "command": "ai-translate-wiki.openTranslatePanel"
        }
      ]
    },
    "configuration": {
      "title": "AI Translate Wiki",
      "properties": {
        "ai-translate-wiki.apiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "azure",
            "google",
            "claude",
            "deepseek"
          ],
          "enumDescriptions": [
            "OpenAI GPT",
            "Azure OpenAI",
            "Google Translate",
            "Anthropic Claude",
            "DeepSeek"
          ],
          "description": "%config.apiProvider.description%"
        },
        "ai-translate-wiki.apiKey": {
          "type": "string",
          "default": "",
          "description": "%config.apiKey.description%"
        },
        "ai-translate-wiki.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "%config.apiEndpoint.description%"
        },
        "ai-translate-wiki.targetLanguage": {
          "type": "string",
          "default": "en",
          "description": "%config.targetLanguage.description%"
        },
        "ai-translate-wiki.outputDirectory": {
          "type": "string",
          "default": "./translated",
          "description": "%config.outputDirectory.description%"
        },
        "ai-translate-wiki.preserveFormatting": {
          "type": "boolean",
          "default": true,
          "description": "%config.preserveFormatting.description%"
        },
        "ai-translate-wiki.translateCodeBlocks": {
          "type": "boolean",
          "default": false,
          "description": "%config.translateCodeBlocks.description%"
        },
        "ai-translate-wiki.inputDirectory": {
          "type": "string",
          "default": "./",
          "description": "%config.inputDirectory.description%"
        },
        "ai-translate-wiki.filePattern": {
          "type": "string",
          "default": "**/*.md",
          "description": "%config.filePattern.description%"
        },
        "ai-translate-wiki.recursiveSearch": {
          "type": "boolean",
          "default": true,
          "description": "%config.recursiveSearch.description%"
        },
        "ai-translate-wiki.customPrompt": {
          "type": "string",
          "default": "",
          "description": "%config.customPrompt.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "marked": "^9.1.6"
  }
}
